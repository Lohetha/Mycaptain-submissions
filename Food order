#include <stdio.h>


int main()
{
    int n;
    printf("1.Pizza\n2.Burger\n3.Pasta\n4.French Fries\n5.Sandwich");
    printf("\nEnter your choice:");
    scanf("%d",&n);
    switch(n){
        case 1:
          printf("Food item : Pizza\n");
          printf("Price : Rs 239");
          break;
        case 2:
          printf("Food item : Burger\n");
          printf("Price : Rs 129");
          break;
        case 3:
          printf("Food item : Pasta\n");
          printf("Price : Rs 179");
          break;
        case 4:
          printf("Food item : French Fries\n");
          printf("Price : Rs 179");
          break;
        case 5:
          printf("Food item : Sandwich\n");
          printf("Price : Rs 149");
          break; 
        default:
          printf("Enter a valid number between 1 and 5");
    }

    return 0;
}
